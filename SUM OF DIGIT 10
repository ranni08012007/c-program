#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n,Sum=0,digit;
    scanf("%d",&n);
    if(n>=100)
    {
        int temp=n;
        while(temp>0)
        {
            digit=temp%10;
            Sum+=digit;
            temp/=10;
        }
        printf("Sum of digit is %d\n",Sum);
        
    }
    else
    {
        printf("Invalid Input \n");
    }
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
