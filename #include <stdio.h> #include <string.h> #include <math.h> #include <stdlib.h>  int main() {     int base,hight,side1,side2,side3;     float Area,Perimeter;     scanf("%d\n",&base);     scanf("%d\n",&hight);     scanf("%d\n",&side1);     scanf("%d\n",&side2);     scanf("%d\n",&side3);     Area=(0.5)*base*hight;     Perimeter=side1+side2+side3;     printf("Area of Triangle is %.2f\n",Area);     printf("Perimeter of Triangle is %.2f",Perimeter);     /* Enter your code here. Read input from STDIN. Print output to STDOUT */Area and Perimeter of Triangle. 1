#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int base,hight,side1,side2,side3;
    float Area,Perimeter;
    scanf("%d\n",&base);
    scanf("%d\n",&hight);
    scanf("%d\n",&side1);
    scanf("%d\n",&side2);
    scanf("%d\n",&side3);
    Area=(0.5)*base*hight;
    Perimeter=side1+side2+side3;
    printf("Area of Triangle is %.2f\n",Area);
    printf("Perimeter of Triangle is %.2f",Perimeter);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
